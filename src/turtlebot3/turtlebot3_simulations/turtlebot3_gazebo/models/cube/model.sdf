<?xml version='1.0'?>
<sdf version='1.9'>
  <model name='cube'>
  <static>false</static>
  <pose>0.0 0.0 0.02 0.0 0.0 0</pose>
    <!-- Add a base link (can be minimal) -->
    <link name='base_link'>
      <inertial>
        <mass>0.001</mass>
        <inertia>
          <ixx>1e-9</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>1e-9</iyy>
          <iyz>0</iyz>
          <izz>1e-9</izz>
        </inertia>
      </inertial>
    </link>

    <link name='cube_link'>
    <velocity>0 0 0 0 0 0</velocity>
      <inertial>
        <mass>0.02</mass> <!-- Mass of the cube in kg -->
        <inertia>
          <ixx>4.1667e-06</ixx> <!-- Inertia around x-axis -->
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>4.1667e-06</iyy> <!-- Inertia around y-axis -->
          <iyz>0.0</iyz>
          <izz>4.1667e-06</izz> <!-- Inertia around z-axis -->
        </inertia>
        <!-- <pose>0 0 0 0 -0 0</pose> -->
      </inertial>
      <gravity>1</gravity>
      <self_collide>0</self_collide>
      <kinematic>0</kinematic>
      <enable_wind>0</enable_wind>
      <visual name='visual'>
        <!-- <pose>0 0 0 0 -0 0</pose> -->
        <geometry>
          <box>
            <size>0.05 0.05 0.05</size>
          </box>
        </geometry>
         <material>
          <ambient>0.85 0.72 0.1 1</ambient>  <!-- 直接设置环境光颜色 -->
          <diffuse>0.95 0.80 0.2 1</diffuse>  <!-- 增强漫反射亮度 -->
        </material>
      </visual>
      <collision name='collision'>
      <max_contacts>10</max_contacts>
        <!-- <pose>0 0 0 0 -0 0</pose> -->
        <geometry>
          <box>
            <size>0.05 0.05 0.05</size>
          </box>
        </geometry>
         <surface>
          <friction>
            <ode>
            <mu>1.0</mu>
            <mu2>0.8</mu2>
            </ode>
         </friction>
          </surface>
      </collision>
    </link>

    <!-- Add a joint connecting base_link and cube_link -->
    <joint name='link_0_joint' type='revolute'>
      <parent>base_link</parent>
      <child>cube_link</child> <!-- Changed from link_0 to cube_link -->
      <pose>0 0 0 0 0 0</pose> 
      <axis>
        <xyz>0 0 1</xyz> 
        <limit>
          <lower>-3.14159</lower>
          <upper>3.14159</upper>
          <effort>10.0</effort> 
          <velocity>1.0</velocity>
        </limit>
        <dynamics>
          <damping>0.1</damping>
        </dynamics>
      </axis>
    </joint>
